<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="confirmPaymentDetailsVM" type="com.pasindusapplication.app.modules.confirmpaymentdetails.data.viewmodel.ConfirmPaymentDetailsVM"/>
        <import type="androidx.lifecycle.LiveData"/>
    </data>
    <FrameLayout android:id="@+id/frameStack"
        android:layout_height="match_parent"
        android:layout_width="match_parent" style="@style/groupStylewhite_A700">
        <FrameLayout android:id="@+id/frameConfirmPayment"
            android:layout_gravity="start"
            android:layout_height="match_parent"
            android:layout_width="match_parent" style="@style/groupStylewhite_A700">
            <FrameLayout android:id="@+id/frameStackmitchellluouone"
                android:layout_gravity="top|start"
                android:layout_height="@dimen/_701pxv"
                android:layout_marginBottom="@dimen/_10pxv" android:layout_width="match_parent"
                android:background="#54BAB9">
                <ImageView android:id="@+id/imageMitchellluoUOne"
                    android:layout_gravity="top|start"
                    android:layout_height="@dimen/_640pxv"
                    android:layout_marginBottom="@dimen/_10pxv"
                    android:layout_width="match_parent"
                    android:scaleType="fitXY"
                    imageRes="@{@drawable/img_mitchellluou1}"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_mitchellluou1"/>
                <LinearLayout
                    android:id="@+id/linearColumnconfirmyourpa"
                    android:layout_gravity="top|center"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_77pxv"
                    android:layout_marginEnd="@dimen/_56pxh"
                    android:layout_marginStart="@dimen/_56pxh"
                    android:layout_marginTop="@dimen/_77pxv"
                    android:layout_width="match_parent" android:orientation="vertical">
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtConfirmYourPa"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10pxh"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:text="@{confirmPaymentDetailsVM.confirmPaymentDetailsModel.txtConfirmYourPa}"
                        style="@style/txtInterbold16" tools:text="@string/msg_confirm_your_pa"/>

                    <EditText
                        android:id="@+id/etGroupSix"
                        style="@style/etSolidRounded"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="@dimen/_47pxv"
                        android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                        android:ellipsize="end"
                        android:hint="@string/lbl_enter_name"
                        android:inputType="text"
                        android:paddingStart="@dimen/_22pxh"
                        android:paddingTop="@dimen/_7pxv"
                        android:paddingEnd="@dimen/_30pxh"
                        android:paddingBottom="@dimen/_6pxv"
                        android:singleLine="true"
                        android:text="@={confirmPaymentDetailsVM.etGroupSixValue}"
                        android:textColorHint="@color/black_900"
                        tools:ignore="Autofill" />

                    <EditText
                        android:id="@+id/etGroupFive"
                        style="@style/etSolidRounded"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="@dimen/_27pxv"
                        android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                        android:ellipsize="end"
                        android:hint="@string/lbl_enter_email"
                        android:inputType="textEmailAddress"
                        android:paddingStart="@dimen/_21pxh"
                        android:paddingTop="@dimen/_7pxv"
                        android:paddingEnd="@dimen/_30pxh"
                        android:paddingBottom="@dimen/_6pxv"
                        android:singleLine="true"
                        android:text="@={confirmPaymentDetailsVM.etGroupFiveValue}"
                        android:textColorHint="@color/black_900"
                        tools:ignore="Autofill" />

                    <EditText
                        android:id="@+id/etGroupFour"
                        style="@style/etSolidRounded"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="@dimen/_27pxv"
                        android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                        android:ellipsize="end"
                        android:hint="@string/msg_enter_phone_num"
                        android:inputType="phone"
                        android:paddingStart="@dimen/_21pxh"
                        android:paddingTop="@dimen/_6pxv"
                        android:paddingEnd="@dimen/_30pxh"
                        android:paddingBottom="@dimen/_7pxv"
                        android:singleLine="true"
                        android:text="@={confirmPaymentDetailsVM.etGroupFourValue}"
                        android:textColorHint="@color/black_900"
                        tools:ignore="Autofill" />

                    <EditText
                        android:id="@+id/etGroupThree"
                        style="@style/etSolidRounded"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="@dimen/_27pxv"
                        android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                        android:ellipsize="end"
                        android:hint="@string/lbl_enter_amount"
                        android:inputType="text"
                        android:paddingStart="@dimen/_21pxh"
                        android:paddingTop="@dimen/_6pxv"
                        android:paddingEnd="@dimen/_30pxh"
                        android:paddingBottom="@dimen/_7pxv"
                        android:singleLine="true"
                        android:text="@={confirmPaymentDetailsVM.etGroupThreeValue}"
                        android:textColorHint="@color/black_900"
                        tools:ignore="Autofill" />
                    <androidx.appcompat.widget.AppCompatButton
                        android:ellipsize="end" android:gravity="center"
                        android:id="@+id/btnEdit"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_43pxv"
                        android:layout_width="match_parent"
                        android:paddingBottom="@dimen/_11pxv"
                        android:paddingEnd="@dimen/_30pxh"
                        android:paddingStart="@dimen/_30pxh"
                        android:paddingTop="@dimen/_11pxv"
                        android:singleLine="true"
                        android:text="@string/lbl_edit"
                        android:textAllCaps="false"
                        style="@style/btnSolidRounded_2" tools:text="@string/lbl_edit"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:ellipsize="end" android:gravity="center"
                        android:id="@+id/btnPayment"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_17pxv"
                        android:layout_width="match_parent"
                        android:paddingBottom="@dimen/_11pxv"
                        android:paddingEnd="@dimen/_30pxh"
                        android:paddingStart="@dimen/_30pxh"
                        android:paddingTop="@dimen/_11pxv"
                        android:singleLine="true"
                        android:text="@string/lbl_payment"
                        android:textAllCaps="false"
                        style="@style/btnSolidRounded" tools:text="@string/lbl_payment"/>
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frameStackundrawconfirma"
                style="@style/groupStyleteal_900cornerRadius"
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:layout_gravity="bottom|start"
                android:layout_marginTop="@dimen/_10pxv">

                <ImageView
                    android:id="@+id/imageUndrawconfirma"
                    android:layout_width="@dimen/_168pxh"
                    android:layout_height="@dimen/_120pxh"
                    android:layout_gravity="top|center"
                    android:layout_marginStart="@dimen/_93pxh"
                    android:layout_marginTop="@dimen/_10pxv"
                    android:layout_marginEnd="@dimen/_93pxh"
                    android:layout_marginBottom="@dimen/_10pxv"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_undrawconfirma"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_undrawconfirma" />
            </FrameLayout>
        </FrameLayout>
    </FrameLayout>
</layout>
