<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.TravelCeylonia"
        tools:targetApi="31">
        <activity
            android:name=".EditAcBookingActivity"
            android:exported="false" />
        <activity
            android:name=".BookHotelActivity"
            android:exported="false" />
        <activity
            android:name=".ManageBookingAcActivity"
            android:exported="false" />
        <activity
            android:name=".BookNowAcActivity"
            android:exported="false" />
        <activity
            android:name=".AccommodationActivity"
            android:exported="false" android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mad.travelceylonia.MainActivity" />
        </activity>

        <activity
            android:name=".RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".WelcomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:exported="false" />
    </application>

</manifest>